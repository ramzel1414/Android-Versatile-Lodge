<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textColor="@android:color/black"
    android:background="#dadada">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <!-- Page Desc -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp"
            android:background="#dadada"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking Transaction"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:textColor="@android:color/black"/>

        </LinearLayout>
        <!-- Add a Room -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="#dadada"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/bookButton"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#2B1103"
                android:padding="8dp"
                android:text="Book a Room +"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:onClick="showBookRoomModal"/>

        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:background="#eeeeee"
            android:padding="16dp">

            <!-- Image on the left -->
            <ImageView
                android:id="@+id/bookImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/room"
                android:scaleType="fitXY"/>

            <!-- Text in the middle with 4 columns -->
            <LinearLayout
                android:textColor="@android:color/black"
                android:id="@+id/bookInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookImage"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginVertical="16dp">

                <!-- Column 1: Maramag -->
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Malaybalay"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <!-- Column 2: Room 1 -->
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room 1"
                    android:textSize="16sp"/>

                <!-- Column 3: Per Day: 2 -->
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Per Day: 2"
                    android:textSize="16sp"/>

                <!-- Column 4: Max People: 1 -->
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max People: 1"
                    android:textSize="16sp"/>

                <!-- Column 5: Room 1 -->
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Date: 04-12-2024"
                    android:textSize="16sp"/>

                <!-- Column 6: Per Day: 2 -->
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Date: 04-13-2024"
                    android:textSize="16sp"/>

                <!-- Column 7: Max People: 1 -->
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Ammount: â‚±400"
                    android:textSize="16sp"/>

                <!-- Column 8: Max People: 1 -->
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booked by: Admin User"
                    android:textSize="16sp"/>

                <!-- Column 9: Max People: 1 -->
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="6e1438aa-4d3f-417f-bf84-745ab6da"
                    android:textSize="16sp"/>


            </LinearLayout>

            <!-- Button at the bottom -->
            <Button
                android:id="@+id/editButton2"
                android:layout_below="@id/bookInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"
                android:text="Booked"
                android:backgroundTint="#777777"
                android:textColor="@android:color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:background="#eeeeee"
            android:padding="16dp">

            <!-- Image on the left -->
            <ImageView
                android:id="@+id/bookImage2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/room"
                android:scaleType="fitXY"/>

            <!-- Text in the middle with 4 columns -->
            <LinearLayout
                android:textColor="@android:color/black"
                android:id="@+id/bookInfo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookImage2"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginVertical="16dp">

                <!-- Column 1: Maramag -->
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valencia"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <!-- Column 2: Room 1 -->
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room 1"
                    android:textSize="16sp"/>

                <!-- Column 3: Per Day: 2 -->
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Per Day: 2"
                    android:textSize="16sp"/>

                <!-- Column 4: Max People: 1 -->
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max People: 1"
                    android:textSize="16sp"/>

                <!-- Column 5: Room 1 -->
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Date: 04-12-2024"
                    android:textSize="16sp"/>

                <!-- Column 6: Per Day: 2 -->
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Date: 04-13-2024"
                    android:textSize="16sp"/>

                <!-- Column 7: Max People: 1 -->
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Ammount: â‚±400"
                    android:textSize="16sp"/>

                <!-- Column 8: Max People: 1 -->
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booked by: Admin User"
                    android:textSize="16sp"/>

                <!-- Column 9: Max People: 1 -->
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="6e1438aa-4d3f-417f-bf84-745ab6da19"
                    android:textSize="16sp"/>


            </LinearLayout>

            <!-- Button at the bottom -->
            <Button
                android:id="@+id/editButton"
                android:layout_below="@id/bookInfo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"
                android:text="Booked"
                android:backgroundTint="#777777"
                android:textColor="@android:color/white"/>
        </RelativeLayout>

    </LinearLayout>

</ScrollView>
